{
    "name" : "Image Filter",
    "description" : "Image filter for statusviews website",
    "version" : "1.0.0",
    "manifest_version" : 3,
    "permissions": [
        "activeTab",
        "tabs",
        "clipboardWrite"
      ],
    "background" : {
        "service_worker" : "background.js"
    },
    "action" : {
        "default_popup" : "popup.html"
    },
    "icons" : {
        "16" : "images/icon-16.png",
        "32" : "images/icon-32.png",
        "48" : "images/icon-48.png"
    }
    
}